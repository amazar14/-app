@import "variable.styl"

  html, body
    line-height: 1
    font-family: 'PingFang SC', 'STHeitSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
    font-weight 100
    user-select: none
    -webkit-tap-highlight-color: transparent
    color: $color-text
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    &:after
      content: ''
      position: absolute
      top 0
      width 100%
      height 100%
      background url(../../../static/img/bg.jpg) 0 0 no-repeat
      background-size 100% 100%
      filter: blur(10px)
      z-index: -10
      transform: scale(1.1)
    &:before
      content: ''
      position: absolute
      width 100%
      height 100%
      background-color rgba(0,0,0,.6)
      z-index: -1
